<h1>Listing material_items</h1>

<table>
  <thead>
    <tr>
      <th>Multiplier</th>
      <th>Unit</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @material_items.each do |material_item| %>
      <tr>
        <td><%= material_item.multiplier %></td>
        <td><%= material_item.unit %></td>
        <td><%= material_item.quantity %></td>
        <td><%= link_to 'Show', material_item %></td>
        <td><%= link_to 'Edit', edit_material_item_path(material_item) %></td>
        <td><%= link_to 'Destroy', material_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

