<h1>Listing phones</h1>

<table>
  <thead>
    <tr>
      <th>Areacode</th>
      <th>Citycode</th>
      <th>Countrycode</th>
      <th>Localnumber</th>
      <th>Extension</th>
      <th>Phonetype</th>
      <th>Priorityorder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.areacode %></td>
        <td><%= phone.citycode %></td>
        <td><%= phone.countrycode %></td>
        <td><%= phone.localnumber %></td>
        <td><%= phone.extension %></td>
        <td><%= phone.phonetype %></td>
        <td><%= phone.priorityorder %></td>
        <td><%= link_to 'Show', phone %></td>
        <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
        <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

