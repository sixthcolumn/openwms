<h1>Listing work_order_hazards</h1>

<table>
  <thead>
    <tr>
      <th>Work order</th>
      <th>Hazard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_order_hazards.each do |work_order_hazard| %>
      <tr>
        <td><%= work_order_hazard.work_order %></td>
        <td><%= work_order_hazard.hazard %></td>
        <td><%= link_to 'Show', work_order_hazard %></td>
        <td><%= link_to 'Edit', edit_work_order_hazard_path(work_order_hazard) %></td>
        <td><%= link_to 'Destroy', work_order_hazard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

