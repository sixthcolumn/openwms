<h1>Listing contactperson_addresses</h1>

<table>
  <thead>
    <tr>
      <th>Contactperson</th>
      <th>Address</th>
      <th>Address type</th>
      <th>Priority order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contactperson_addresses.each do |contactperson_address| %>
      <tr>
        <td><%= contactperson_address.contactperson %></td>
        <td><%= contactperson_address.address %></td>
        <td><%= contactperson_address.address_type %></td>
        <td><%= contactperson_address.priority_order %></td>
        <td><%= link_to 'Show', contactperson_address %></td>
        <td><%= link_to 'Edit', edit_contactperson_address_path(contactperson_address) %></td>
        <td><%= link_to 'Destroy', contactperson_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

